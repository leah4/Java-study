import java.util.*;
//数字统计
public class NumbersCount{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        String n = sc.nextLine();
        int[] arr = new int[10];
        for(int i = 0; i < n.length(); i++){
            arr[n.charAt(i)-'0']++;
        }
        for(int i = 0;i<arr.length;i++){
            if(arr[i]!=0){System.out.println(i+":"+arr[i]);}
        }
    }
}
